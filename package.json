{
  "name": "nextjs-rn-microfrontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:native": "./devops/dev-native.sh",
    "dev:web": "./devops/dev-web.sh",
    "build": "turbo run build",
    "build:ui": "turbo run build --filter=@repo/ui",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "create:next": "turbo gen next",
    "create:expo": "turbo gen expo",
    "create:rn": "turbo gen react-native",
    "bundle:ios": "cd apps/native && pnpm bundle:ios",
    "bundle:android": "cd apps/native && pnpm bundle:android",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@turbo/gen": "2.4.2",
    "prettier": "^3.5.0",
    "turbo": "^2.4.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@10.2.1"
}
