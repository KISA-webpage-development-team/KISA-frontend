    "react": "^18.3.1",
    "react-native": "^0.77.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.0.1",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "@types/react": ">=18 || ^19",
    "@types/react-dom": ">=18 || ^19",
    "react": ">=18 || ^19",
    "react-dom": ">=18 || ^19",
    "react-native": "^0.77.1"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    },
    "react-native": {
      "optional": true
    }
